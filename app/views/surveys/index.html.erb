<%if @surveys.any? %>
<h1>Surveys</h1>
<table>
  <tr>
    <th>Participant</th>
    <th>Actions</th>
  </tr>
  <% @surveys.each do |survey| %>
    <tr>
      <td><%= survey.participant %></td>
      <td>
        <%= link_to '🔍', survey_path(survey) %>
        <%= link_to '🗑', survey_path(survey),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>
<%else%>
<h2>No Surveys</h2>
<%end%>


<%= link_to 'New Survey', new_survey_path %><br>
