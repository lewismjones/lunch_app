<h1>Restaurants</h1>
<table>
  <tr>
    <th><%= link_to 'Name', restaurants_path %></th>
    <th><%= link_to 'Distance?', restaurants_path(sort: 'distance') %></th>
    <th><%= link_to 'Drinks?', restaurants_path(sort: 'drinks') %></th>
    <th><%= link_to 'Brunch?', restaurants_path(sort: 'brunch') %></th>
    <th>Website</th>
    <th>Actions</th>

    <th></th>
  </tr>
  <% @restaurants.each do |restaurant| %>
    <tr>
      <td><%= restaurant.name %></td>
      <td><%= restaurant.distance %></td>
      <td><%= restaurant.drinks ? "✓" : "X"  %></td>
      <td><%= restaurant.brunch ? "✓" : "X"  %></td>
      <td><%= link_to "🍆", restaurant.website, target: "blank" %></td>
      <td>
        <%= link_to '🔍', restaurant_path(restaurant) %>
        <%= link_to '📝', edit_restaurant_path(restaurant) %>
        <%= link_to '🗑', restaurant_path(restaurant),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>


